
<!DOCTYPE html>

<head>
    <title>Compose a Tweet</title>
</head>


    <body>
        

    <h1>Compose a Tweet</h1>

    <% if session[:temp_errors] %>
        <% session[:temp_errors].each do |msg| %>
            <p style="color: red;"><%= msg %></p>
        <% end %>
        <% session[:temp_errors] = nil %>
    <% end %>




        <form method="post" action="/tweets">
            <p>Content: </p>
            <label for="content">
            <textarea rows="4" cols="50" name="content" id="content" > </textarea>
            </label>

            <input type="submit" value="submit">
        </form>
    </body>
</html>